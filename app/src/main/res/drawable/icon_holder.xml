<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the box -->
    <solid android:color="#96FFD1"/> <!-- White background -->



    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Optional padding so icon isn't touching edges -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
